{
  "name": "wdc-starter-kit-promo",
  "module": "index.ts",
  "type": "module",
  "dependencies": {
    "hono": "^4.5.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.6"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "dev": "run-p server tailwind",
